#include"iostream"
using namespace std;
#define height 180.5
#define weight 56
int main()
{
    system("chip 65001");
    cout << "我是周杰伦" << endl;
    cout << "今年" << age <<"岁"<< endl;
    cout << "身高" << height <<"cm" << endl;
    cout << "体重" << weight <<"kg" <<endl;
    return 0;
}
//输出为：我是周杰伦，今年21岁，体重，身高

变量的改变，计算顺序：先计算等式右边的值，再将值赋给等式左边
#include"iostream"
#include"windows.h"
using namespace std;
int main()
{
	SetConsoleOutputCP(CP_UTF8);
	int bmi;//声明
	bmi = 30;
	cout << "小明现在的BMI是：" <<bmi<< endl;
	bmi = 26;
	cout << "经过一个月的减肥，小明现在的BMI是：" <<bmi<< endl;
	bmi = bmi - 2;//+,-,*,/
	cout << "又经过一个月的减肥，小明的bmi减少了两点，小明现在的bmi是：" << bmi << endl;
	return 0;
}
24


sizeof函数
#include"iostream"
#include"windows.h"
using namespace std;
int main() {
    SetConsoleOutputCP(CP_UTF8);
    //short,int,long,longlong
    short age=21;
    cout<<age<<endl;
    int num1=10;
    long num2=20;
    long long num3=30;
    cout<<num1<<num2<<num3<<endl;
    //sizeof()函数，用法：函数sizeof(数据），会告知占用字节
    cout<<"short变量，占用字节："<<sizeof(age)<<endl;
    cout<<"long变量，占用字节："<<sizeof(num2)<<endl;
    cout<<"int变量，占用字节："<<sizeof(num1)<<endl;
    cout<<"long long变量，占用字节："<<sizeof(num3)<<endl;

    return 0;

}

