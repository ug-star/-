#include"iostream"
using namespace std;
#define height 180.5
#define weight 56
int main()
{
    system("chip 65001");
    cout << "我是周杰伦" << endl;
    cout << "今年" << age <<"岁"<< endl;
    cout << "身高" << height <<"cm" << endl;
    cout << "体重" << weight <<"kg" <<endl;
    return 0;
}
//输出为：我是周杰伦，今年21岁，体重，身高

变量的改变，计算顺序：先计算等式右边的值，再将值赋给等式左边
#include"iostream"
#include"windows.h"
using namespace std;
int main()
{
	SetConsoleOutputCP(CP_UTF8);
	int bmi;//声明
	bmi = 30;
	cout << "小明现在的BMI是：" <<bmi<< endl;
	bmi = 26;
	cout << "经过一个月的减肥，小明现在的BMI是：" <<bmi<< endl;
	bmi = bmi - 2;//+,-,*,/
	cout << "又经过一个月的减肥，小明的bmi减少了两点，小明现在的bmi是：" << bmi << endl;
	return 0;
}
24


sizeof函数
#include"iostream"
#include"windows.h"
using namespace std;
int main() {
    SetConsoleOutputCP(CP_UTF8);
    //short,int,long,longlong
    short age=21;
    cout<<age<<endl;
    int num1=10;
    long num2=20;
    long long num3=30;
    cout<<num1<<num2<<num3<<endl;
    //sizeof()函数，用法：函数sizeof(数据），会告知占用字节
    cout<<"short变量，占用字节："<<sizeof(age)<<endl;
    cout<<"long变量，占用字节："<<sizeof(num2)<<endl;
    cout<<"int变量，占用字节："<<sizeof(num1)<<endl;
    cout<<"long long变量，占用字节："<<sizeof(num3)<<endl;

    return 0;

}

//有符号：signed（可选），无符号：unsigned(必须)
   //无符号的数字，必须大于等于0
   //无符号int long 有快捷写法
  // u_long相当于unsigned long




#include"iostream"
#include"windows.h"
using namespace std;
int main() {
   SetConsoleOutputCP(CP_UTF8);
   //float单精度浮点数，四字节，6-7位的有效数字
   float num1=1234567890;//只提供了七位的准确输出
   float num2=1.234567890;
   cout<<fixed;//设置为小数显示
   cout.width(20);
   cout<<num1<<endl;
   cout<<num2<<","<<sizeof(num2)<<endl;
   double num3=1234567890.1234567890;
   cout<<num3<<","<<sizeof(num3)<<endl;
   long double num4=1234567890.1234567890;
   cout<<num4<<","<<sizeof(num4)<<endl;
   //double双精度浮点数
   //long double长精度（多精度）浮点数
   return 0;
}




#include"iostream"
using namespace std;
int main() {
	//不带后缀的数字的类型确定，整型的类型最小是int,小数的类型最小是double
	cout << "10的字节数是:" << sizeof(10) << endl;
	cout << "99999999999的字节数是:" << sizeof(99999999999) << endl;
	cout << "3.14的字节数是：" << sizeof(3.14) << endl;
	cout << "10L的字节数是：" << sizeof(10L) << endl;
	//F float的意思
	//D double的意思
	cout << "3.14F的字节数是：" << sizeof(3.14F) << endl;
	cout << "3.14的字节数是：" << sizeof(3.14) << endl;
	cout << "3.14D的字节数是：" << sizeof(3.14D) << endl;


	return 0;
}





#include"iostream"
using namespace std;
int main() {
   //C语言风格类型的字符串
   char s1[]="itheima";//字符数组类型
   char *s2="itcast";//指针形式的字符串
   //C++语言风格的字符串
   string s3="C++ string";//c++string类型字符串

 //  s1="666"; 注意：字符数组类型的变量不可通过赋值来改变，这里注释掉
   s2="777";
   s3="888";

   cout<<s1<<endl;
   cout<<s2<<endl;
   cout<<s3<<endl;
return 0;
}



#include"iostream"
#include <string>

using namespace std;

int main() {

    string name = "小黑";
    string major = "物理";
    int age = 21;
    double height = 172.50;
    string msg = "我叫做：" + name + ".我的专业是：" + major + ".年龄是：" + to_string(age) + ".身高是：" + to_string(height) + ".";
    cout << msg << endl;  //to_string()是将非字符串型数据转化为字符串型数据，“+”只能用于字符串类型数据之间

    return 0;

}



布尔
#include"iostream"

using namespace std;

int main() {
//布尔：bool  字面量仅有两个：ture或false
   bool flag=true;//本质1
   bool flag2=false;//本质0
   cout<<flag<<endl;
   cout<<flag2<<endl;

   return 0;
}




#include"iostream"
using namespace std;

int main() {
   //单目操作符(只有一个操作数)：+，—
   //双目操作符(有两个操作数)：+-*/%
  //单目操作符：++（+1），--(-1)
    int a=2;
    int b=++a;//前置递增（+1），在赋值语句之前，先执行+1的操作
    cout<<"a="<<a<<",b="<<b<<endl;

    int c=2;
    int d=c++;//后置递增，在赋值语句之后，再执行加一的操作
    cout<<"c="<<c<<",d="<<d<<endl;
    //减法同上



三元运算符
#include"iostream"
using namespace std;

int main() {
  //表达式？v1:v2;        表达式为真，输入v1的值
    int num1,num2;
    cout<<"请输入num1的值："<<endl;
    cin>>num1;
    cout<<"请输入num2的值："<<endl;
    cin>>num2;
    string value=num1>num2?"num1是大于num2":"num1是小于num2";
    cout<<value<<endl;99
   return 0;
}


if逻辑判断
#include"iostream"
using namespace std;

int main() {
 /*
  *if(判断)
  *{
  *    code;
  *    code;
  *     ...
  *
  *}
  */cout<<"今天发工资了"<<endl;
    int money;
    cout<<"请输入小明发的工资："<<endl;
    cin>>money;
    //开始逻辑判断
    if(money>=10000) {
        //满足条件执行里面的代码
        cout<<"买个新电脑，花了9990"<<endl;
        money-=9990;
    }
    cout<<"今天发的工资还剩下："<<money<<"元！"<<endl;
   return 0;
}




#include"iostream"
using namespace std;

int main() {
/*
 *if判断
 *{
 *.....
 *}
 *{
 *}
 *
 */
    int love;
    cout<<"小美你喜欢我吗？喜欢扣1，不喜欢扣0"<<endl;
   cin>>love;
if(love) {
        cout<<"我也喜欢你！！！"<<endl;
    }
    else {
        cout<<"伤心，我去追求小新去了。"<<endl;
    }
   return 0;
}
